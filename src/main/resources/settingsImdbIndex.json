        "filter" : ["lowercase", "asciifolding", "synonym"]
      },
      "title_analyzer" :
      {
        "type" : "custom",
        "tokenizer" : "whitespace",
        "filter" : ["lowercase", "asciifolding", "synonym"]
      },
